{
  "hosts": [
    {
      "host": "http://localhost:8887",
      "ruleSets": [
        "routes"
      ]
    }
  ],
  "ruleSets": {
    "routes": {
      "mode": "any",
      "rules": [
        {
          "when": "/ping",
          "then": {
            "static": "Pong2!"
          }
        },
        {
          "when": "regex::^/ui",
          "then": {
            "static": "UI!"
          }
        },
        {
          "when": "equals::/pingo",
          "then": {
            "static": "Pongo2!"
          }
        },
        {
          "when": "/",
          "then": {
            "proxy": "https://github.com/asos-craigmorten/opine-http-proxy"
          }
        }
      ]
    }
  }
}
